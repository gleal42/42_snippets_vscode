{
	"simple_makefile": {
		"prefix": ["simplemake", "make"],
		"body": [
		  "CXX := c++",
		  "CXXFLAGS := -Wall -Wextra -Werror -std=c++98",
		  "NAME := $1",
		  "SRCS := $2 \\",
		  "INC := $3 \\",
		  "OBJS := $(SRCS:.cpp=.o)",
		  "all: $(NAME)",
		  "$(NAME): $(OBJS)",
		  "\t$(CXX) $(CXXFLAGS) $(OBJS) -o $@",
		  "%.o: %.cpp $(INC) Makefile",
		  "\t$(CXX) $(CXXFLAGS) $< -c -o $@",
		  "clean:",
		  "\t$(RM) *.o",
		  "fclean: clean",
		  "\t$(RM) $(NAME)",
		  "re: fclean all",
		  "",
		  ".PHONY: all clean fclean re"
		],
		"description": "simple_makefile"
	  },
	"makefile_dir": {
		"prefix": ["make_with_dirs", "dirs", "bin", "srcs"],
		"body": [
			"CXX := c++",
			"CXXFLAGS := -Wall -Wextra -Werror -std=c++98",
			"CPPFLAGS = -Iinc",
			"NAME := $1",
			"SRCS := $2",
			"INC := $3",
			"OBJS := $(SRCS:.cpp=.o)",
			"SRCS := $(addprefix srcs/, $(SRCS))",
			"OBJS := $(addprefix bin/, $(OBJS))",
			"INC := $(addprefix inc/, $(INC))",
			"all: $(NAME)",
			"bin:",
			"\tmkdir bin",
			"$(NAME): $(OBJS) $(INC) Makefile",
			"\t$(CXX) $(CXXFLAGS) $(CPPFLAGS) $(OBJS) -o $@",
			"bin/%.o: srcs/%.cpp | bin",
			"\t$(CXX) $(CXXFLAGS) $(CPPFLAGS) $< -c -o $@",
			"clean:",
			"\t$(RM) bin/*.o",
			"fclean: clean",
			"\t$(RM) $(NAME)",
			"re: fclean all",
			"",
			".PHONY: all clean fclean re depend",
			"",
			"depend: $(SRCS)",
			"\tmakedepend $(CPPFLAGS) $^",
			"",
			"# DO NOT DELETE THIS LINE -- make depend needs it"
		],
		"description": "Creates a base Makefile and prompts for Srcs files and dependencies"
	},
	  "Dependencies and Dirs": {
		"prefix": "mmd_with_dirs_deps",
		"body": [
		  "CXX := c++",
		  "CXXFLAGS := -Wall -Wextra -Werror -std=c++98",
		  "CPPFLAGS := -Iinc",
		  "NAME := $1",
		  "SRCDIR := srcs/",
		  "OBJDIR := bin/",
		  "DEPDIR := deps/",
		  "SRCS := $2",
		  "OBJS := $(SRCS:.cpp=.o)",
		  "DEPS := $(SRCS:.cpp=.d)",
		  "SRCS := $(addprefix $(SRCDIR), $(SRCS))",
		  "OBJS := $(addprefix $(OBJDIR), $(OBJS))",
		  "DEPS := $(addprefix $(DEPDIR), $(DEPS))",
		  "DEPFLAGS = -MT $@ -MMD -MP -MF $(DEPDIR)/$*.d",
		  "",
		  "all: $(NAME)",
		  "",
		  "$(DEPDIR): ; mkdir -p $@",
		  "$(OBJDIR): ; mkdir -p $@",
		  "",
		  "$(NAME): $(OBJS)",
		  "\t$(CXX) $(CXXFLAGS) $(CPPFLAGS) $(OBJS) -o $@",
		  "",
		  "bin/%.o : srcs/%.cpp deps/%.d Makefile | $(OBJDIR) $(DEPDIR)",
		  "\t$(CXX) $(DEPFLAGS) $(CXXFLAGS) $(CPPFLAGS) -c -o $@ $<",
		  "",
		  "$(DEPS): Makefile",
		  "-include $(DEPS)",
		  "",
		  "clean:",
		  "\t$(RM) $(OBJS)",
		  "\t$(RM) $(DEPS)",
		  "",
		  "fclean: clean",
		  "\t$(RM) $(NAME)",
		  "",
		  "resetclean: fclean clean",
		  "\t$(RM) -r $(OBJDIR) $(DEPDIR)",
		  "",
		  "re: fclean all",
		  "",
		  ".PHONY: all clean fclean resetclean re",
		  ""
		],
		"description": "Dependencies and Dirs"
	  },
	  "simple_makefile_makedepend": {
		"prefix": ["makedepend", "autodepend"],
		"body": [
		  "CXX := c++",
		  "CXXFLAGS := -Wall -Wextra -Werror -std=c++98",
		  "NAME := $1",
		  "SRCS := $2 \\",
		  "OBJS := $(SRCS:.cpp=.o)",
		  "all: $(NAME)",
		  "$(NAME): $(OBJS) Makefile",
		  "\t$(CXX) $(CXXFLAGS) $(OBJS) -o $@",
		  "%.o: %.cpp",
		  "\t$(CXX) $(CXXFLAGS) $< -c -o $@",
		  "clean:",
		  "\t$(RM) *.o",
		  "fclean: clean",
		  "\t$(RM) $(NAME)",
		  "re: fclean all",
		  "",
		  ".PHONY: all clean fclean re",
		  "",
		  "depend: $(SRCS)",
		  "\tmakedepend $^",
		  "",
		  "# DO NOT DELETE THIS LINE -- make depend needs it"
		],
		"description": "simple_makefile_mmd"
	  },
	"valgrind": {
		"prefix": ["vg", "valgrind", "valg"],
		"body": [
			"valgrind: vbuild vrun",
			"",
			"vbuild: | Dockerfile",
			"\tdocker build --tag valgrind-image .",
			"Dockerfile:",
			"\t@echo \"FROM ubuntu:latest\\n\\nRUN apt-get update\\nRUN apt-get upgrade -y\\nRUN apt-get install make clang gcc valgrind -y\\n\\nWORKDIR /valgrind\" > Dockerfile",
			"vrun:",
			"\tdocker run --tty --interactive --rm --volume `pwd`:/valgrind/ --name valgrind valgrind-image",
			"vcheck:",
			"\tdocker container ls -a",
			"\tdocker images",
			"\tdocker volume ls",
			"vclean:",
			"\tdocker system prune -a",
		],
		"description": "Creates a base Makefile and prompts for Srcs files and dependencies"
	},
	"Dependencies_hpp": {
		"prefix": ["deps", "dependencies", "header files", "hpp files", "h files", "inc", "include"],
		"body": [
			"${CLIPBOARD/(SRCS)|(.c)/${1:+INC}${2:+.h}/g}",
		],
		"description": "Copy the SRCS and write inc or deps"
	},
}

